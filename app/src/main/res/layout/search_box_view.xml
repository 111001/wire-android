<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.waz.zclient.pages.main.pickuser.PickUserEditText
        android:id="@+id/puet_pickuser__searchbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="@dimen/framework__general__left_padding"
        android:gravity="left|center"
        android:hint="@string/pick_user_search_focus"
        android:imeOptions="actionGo"
        android:inputType="textNoSuggestions|textVisiblePassword|textMultiLine"
        android:lineSpacingExtra="@dimen/people_picker__input__line_spacing_extra"
        android:maxHeight="@dimen/searchbox__height"
        android:paddingBottom="@dimen/people_picker__input__padding_bottom"
        android:paddingLeft="@dimen/people_picker__input__padding_left"
        android:paddingRight="@dimen/people_picker__input__margin_right"
        android:textColorHint="@color/text__secondary_light"
        app:hintTextSize="@dimen/wire__text_size__small"
        style="?startUiSearchField"
        />

    <!-- Clear button -->
    <com.waz.zclient.ui.text.GlyphTextView
        android:id="@+id/gtv_pickuser__clearbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:gravity="bottom"
        android:paddingBottom="@dimen/people_picker__button__padding_bottom"
        android:paddingLeft="@dimen/people_picker__button__clickarea__padding"
        android:paddingRight="@dimen/framework__general__right_padding"
        android:paddingTop="@dimen/people_picker__button__clickarea__padding"
        android:text="@string/glyph__close"
        style="?startUiCloseButton"
        />

    <!-- Bottom border -->
    <View
        android:id="@+id/v_people_picker__input__color_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/people_picker__border_line__height"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/framework__general__left_padding"
        android:layout_marginRight="@dimen/framework__general__right_padding"
        android:background="@color/separator_dark"
        />

</merge>
