<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/pref_support_screen_title"
    >

    <Preference
        android:key="@string/pref_support_website_key"
        android:title="@string/pref_support_website_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_support_website_url"
            />

    </Preference>

    <Preference
        android:key="@string/pref_support_contact_key"
        android:title="@string/pref_support_contact_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_support_contact_url"
            />

    </Preference>

</PreferenceScreen>
