<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/pref_about_screen_title">

    <Preference
        android:key="@string/pref_about_website_key"
        android:title="@string/pref_about_website_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_about_website_url"
            />

    </Preference>

    <Preference
        android:key="@string/pref_about_tos_key"
        android:title="@string/pref_about_tos_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_about_tos_url"
            />

    </Preference>

    <Preference
        android:key="@string/pref_about_privacy_policy_key"
        android:title="@string/pref_about_privacy_policy_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_about_privacy_policy_url"
            />

    </Preference>

    <Preference
        android:key="@string/pref_about_licenses_key"
        android:title="@string/pref_about_licenses_title"
        >

        <intent
            android:action="android.intent.action.VIEW"
            android:data="@string/pref_about_licenses_url"
            />

    </Preference>

    <Preference
        android:key="@string/pref_about_version_key"
        android:title="@string/pref_about_version_title"
        />

    <Preference
        android:key="@string/pref_about_copyright_key"
        android:title="@string/pref_about_copyright_title"
        />

</PreferenceScreen>
